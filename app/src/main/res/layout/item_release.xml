<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/cardview_horizontal_margin"
    android:layout_marginStart="@dimen/cardview_horizontal_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ru.radiationx.anilibria.ui.widgets.AspectRatioImageView
            android:id="@+id/item_image"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:aspectRatio="1.456" />

        <TextView
            android:id="@+id/item_new_indicator"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_release_new"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:text="Обновлено"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_image"
            android:layout_alignTop="@+id/item_image"
            android:layout_toEndOf="@id/item_image"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textDefault"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Title releaseData long title lol" />

            <TextView
                android:id="@+id/item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="6"
                android:textColor="@color/textDefault"
                android:textSize="14sp"
                tools:text="Title releaseData long title lol Title releaseData long title lol Title releaseData long title lol Title releaseData long title lol Title releaseData long title lol Title releaseData long title lol Title releaseData long title lol " />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
