<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/quality_sd"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Серия 660"/>


    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/quality_sd"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_toStartOf="@+id/quality_hd"
        app:srcCompat="@drawable/ic_quality_sd"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/quality_hd"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_quality_hd"/>

</RelativeLayout>
