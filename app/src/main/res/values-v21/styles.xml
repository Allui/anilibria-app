<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightAppTheme.NoActionBar" parent="LightAppTheme.NoActionBarBase">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#33000000</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DarkAppTheme.NoActionBar" parent="DarkAppTheme.NoActionBarBase">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#33000000</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PlayerTheme" parent="LightAppTheme">
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/playerColorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>
